<h2>Groups</h2>

<% if @groups.length > 0 %>
  <ul>
    <% @groups.each do |group| %>
      <li>
        <%= link_to group.name, group_path(group) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <span>There are no groups</span>
<% end %>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Create a group', new_group_path %>
<% end %>
